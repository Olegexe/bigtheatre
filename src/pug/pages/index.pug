                            ul.nav__menu-list 
                                li.nav__menu-item
                                    a(class="nav__menu-link p-18b" href="#")="Главная"
                                li.nav__menu-item
                                    a(class="nav__menu-link p-18b" href="#")="о театре"
                                li.nav__menu-item
                                    a(class="nav__menu-link p-18b" href="#")="Наши постановки"
