    body
        .wrapper
            header.header
                .container
                    .header__inner
                        nav.nav
                            .burger
                                button(class="burger__button _icon-burger")
                                .burger__body
                                    .burger__close-btn
                                        span._icon-close
                                    ul.burger__menu-list 
                                        li.burger__menu-item
                                            a(class="burger__menu-link p-18b" href="#")="Главная"
                                        li.burger__menu-item
                                            a(class="burger__menu-link p-18b" href="#")="о театре"
                                        li.burger__menu-item
